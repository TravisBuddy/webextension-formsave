{

    "manifest_version": 2,
    "name": "FormSave",
    "version": "0.9",

    "description": "Automatically saves the users forms, and allows the user to view saved forms by ckicking on a button.",
    "icons": {
        "48": "icons/icon.svg"
    },

    "permissions": [
        "storage"
    ], 

    "browser_action": {
        "default_icon": {
            "32" : "icons/icon.svg"
        },
        "default_title": "FormSave",
        "default_popup": "popup/formsave.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
